#!/bin/bash
# run_simulator

# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail

# Run othello simulator
while true; do

  # Each runs 20 self play games - writes training data to file in training dir
  CUDA_VISIBLE_DEVICES=0 nohup python3 simulator/run.py > /dev/null &
  CUDA_VISIBLE_DEVICES=1 nohup python3 simulator/run.py > /dev/null &
  CUDA_VISIBLE_DEVICES=0 nohup python3 simulator/run.py > /dev/null &
  CUDA_VISIBLE_DEVICES=1 nohup python3 simulator/run.py > /dev/null &

  # Train model on latest games
  python3 lib/ml/run.py

  git push

done